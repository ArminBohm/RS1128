@{
    ViewBag.Title = "ErrMsgView";
    //if (ViewBag.IsAjaxRequest == 1) { Layout = null; }
}
<div id="MojInfoScr">
    @*<div class="modal show" role="dialog">*@
        <div role="dialog">
            <div class="modal-dialog" style="width: 450px;">
                <div class="modal-content">
                    <div class="modal-body">
                        <h3 style="color:darkblue; text-align:center;"><b>Autorizacijska ogranicenja</b></h3><br />
                        <p>
                            <div style="text-align:center">
                                <h2 style="color:red;">
                                    Obavijest:
                                </h2><br />
                            </div>
                            Ukoliko citate ovo obavjestenje, znaci da ste pokusali<br />
                            pristupiti dijelovima programa za koje nemate ovlasti.<br />
                            Potrazite pomoc od:<br /><br />

                            <div style="display:inline-block; color:green">
                                &nbsp;&nbsp;&nbsp;- [ <i>Administrator</i> ]<br />
                                <br />
                            </div>
                            <div style="width:100px; height:100px; display:inline-block; position:fixed; margin-left:50px; ">
                                <img id="logo" src="~/Images/Stop_hand.svg.png" style="width:100px;" />
                            </div>
                        </p>
                        <a href="javascript:history.back()" class="btn btn-info">OK</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script type="text/javascript">
    //$('#').hide();
    setInterval(animacija, 1500);
    $(function () {
        $('#Potvrda').click(function () {
            clearInterval(animacija);
            //$('#').show();
            $('#MojInfoScr').hide();
        });
    });
    function animacija() {
        $('#logo').animate({ height: '90px', width: '90px' }, "slow", function () {
            $('#logo').animate({ height: '100px', width: '100px' }, "slow")
        })
    }
</script>
