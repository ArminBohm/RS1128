@model IEnumerable<Prodaja_i_Servis_Racunarske_Opreme.Areas.Resursi.Models.ArtikalVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cijena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JedMjere)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proizvodjac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrupaProizvoda)
        </th>
        <th>
            Akcija
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cijena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JedMjere)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proizvodjac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrupaProizvoda)
        </td>
        <td>
            @Html.ActionLink("Eituj", "Edituj_A", new {  id=item.IdArtikla  }) |
            @Html.ActionLink("Brisanje", "Brisanje_A", new { id = item.IdArtikla })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Novi Artikal", "Dodaj_A")
</p>