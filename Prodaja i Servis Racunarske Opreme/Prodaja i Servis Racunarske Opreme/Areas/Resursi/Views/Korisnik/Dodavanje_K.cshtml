@model Prodaja_i_Servis_Racunarske_Opreme.Areas.Resursi.Models.KorisnikVM

@{
    ViewBag.Title = "Dodavanje_K";
    Layout = null;
}

<h2 style="text-align:center">Dodavanje Korisnika</h2>

<div id="MojInfoScr">
    <div class="modal show" role="dialog">
        <div role="dialog">
            <div class="modal-dialog" style="width: 800px;">
                <div class="modal-content">
                    <div class="modal-body">
                        @using (Ajax.BeginForm("Spasi_K", "Korisnik", new AjaxOptions { UpdateTargetId = "AjaxDiv" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <h2 style="text-align:center">Dodavanje Korisnika</h2>
                            @Html.HiddenFor(model => Model.DatumRegistracije)

                            <table align="center" style="outline:dotted; outline-color:green">
                                <tr align="left">
                                    <td>
                                        <div class="form-group" style="display:inline-block; text-align:center">
                                            Ime
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group" style="display:inline-block; text-align:center">
                                            Prezime
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group" style="text-align:center;">
                                            Adresa
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Adresa, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group" style="text-align:center;">
                                            Email
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="form-group" style="text-align:center;">
                                            Broj Telefona
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.BrojTelefona, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr align="left">
                                    <td>
                                        <div class="form-group" style="display:inline-block; text-align:center">
                                            UserName
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group" style="display:inline-block; text-align:center">
                                            Password
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </td>
                                    <td></td>
                                </tr>
                                <tr style="height:75px">

                                    <td>
                                        <div class="form-group" align="center">
                                            <div>
                                                @Html.DropDownListFor(model => model.GradId, Model.DDLG, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </td>
                                <tr style="height:100px">
                                    <td colspan="2">
                                        <div style="color:red;">
                                            @Html.ValidationSummary()
                                        </div>
                                    </td>
                                    <td align="right" style="padding:48px 0px 0px 0px">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Spasi" class="btn btn-success" style="width:125px" />
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>