@model Prodaja_i_Servis_Racunarske_Opreme.Areas.Resursi.Models.DobavljacVM

@{
    ViewBag.Title = "Dodavanje_D";
}

<h2 style="text-align:center;">Dodavanje Dobavljaca</h2>
<hr />

@using (Html.BeginForm("Spasi_D","Dobavljac")) 
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.HiddenFor(model => Model.IdDobavljaca)
    <table align="center" style="outline:dotted; outline-color:green">
        <tr>
            <td>
            <div class="form-group" style="text-align:center">
                Dobavljac
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
                </div>
            </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group" style="text-align:center">
                    Grad
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.GradId, Model.DDLG, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GradId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
        </tr>
        <tr style="height:100px">
            <td colspan="3" align="right" style="padding:48px 0px 0px 0px">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Izmjeni" class="btn btn-success" style="width:125px" />
                    </div>
                </div>
            </td>

        </tr>
    </table>
</div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
