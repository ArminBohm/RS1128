@model IEnumerable<Prodaja_i_Servis_Racunarske_Opreme.Models.GrupaProizvoda>

@{
    ViewBag.Title = "Index";
}

<h2>Grupe Proizvoda</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.ActionLink("Edituj", "Edituj_GP", new { id=item.Id }) |
            @Html.ActionLink("Brisasnje", "Brisanje_GP", new { id=item.Id })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Nova Grupa Proizvoda", "Dodaj_GP")
</p>