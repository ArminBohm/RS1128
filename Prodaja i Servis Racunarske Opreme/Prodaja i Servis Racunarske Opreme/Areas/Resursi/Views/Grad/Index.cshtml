@model IEnumerable<Prodaja_i_Servis_Racunarske_Opreme.Models.Grad>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Ajax.ActionLink("Edituj", "Edituj_G", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "AjaxDiv" }) |
                @Ajax.ActionLink("Brisanje", "Brisanje_G", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "AjaxDiv" })
            </td>
        </tr>
    }

</table>

<p>
    @Ajax.ActionLink("Novi Grad", "Dodaj_G", new AjaxOptions { UpdateTargetId = "AjaxDiv" })
</p>

<div id="AjaxDiv"></div>