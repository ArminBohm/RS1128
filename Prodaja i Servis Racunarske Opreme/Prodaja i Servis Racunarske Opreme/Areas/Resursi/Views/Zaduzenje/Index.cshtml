@model IEnumerable<Prodaja_i_Servis_Racunarske_Opreme.Models.Zaduzenje>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-color: transparent;
    }
</style>
<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            Akcija
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Ajax.ActionLink("Edituj", "Edituj_Z", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "AjaxDiv" })
                @Html.ActionLink("Brisanje", "Brisanje_Z", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<p>
    @Ajax.ActionLink("Novo Zaduzenje", "Dodaj_Z", new AjaxOptions { UpdateTargetId = "AjaxDiv" })
</p>

<div id="AjaxDiv"></div>