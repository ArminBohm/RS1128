@model Prodaja_i_Servis_Racunarske_Opreme.Areas.Resursi.Models.ZaposlenikVM

    @{
        ViewBag.Title = "Dodavanje_Z";
    }
<style>
    .form-control{
        width:200px;
    }
</style>
    <h2 align="center">Dodavanje Zaposlenika</h2>

    @using (Html.BeginForm("Spasi_Z", "Zaposlenik"))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal" style="align-content:center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => Model.ZavrsetakRadnogOdnosa)
        <table align="center" style="outline:dotted; outline-color:green" >
            <tr align="left">
                <td colspan="3">
                    <div class="form-group" style="display:inline-block; text-align:center" >
                        Ime
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:inline-block; text-align:center">
                        Prezime
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr align="left">
                <td colspan="3" >
                    <div class="form-group" style="text-align:center; width:260px;">
                        Pocetak Radnog Odnosa
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.PocetakRadnogOdnosa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr align="left">
                <td>
                    <div class="form-group" style="text-align:center;">
                        Adresa
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Adresa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Adresa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group" style="text-align:center;">
                        Email
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </td>
                <td>
                    <div class="form-group" style="text-align:center;">
                        Broj Telefona
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.BrojTelefona, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BrojTelefona, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr align="left">
                <td colspan="3">
                    <div class="form-group" style="display:inline-block; text-align:center">
                        UserName
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:inline-block; text-align:center">
                        Password
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr style="height:75px">

                <td>
                    <div class="form-group" align="center">
                        <div>
                            @Html.DropDownListFor(model => model.GradId, Model.DDLG, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GradId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group" align="center">
                        <div>
                            @Html.DropDownListFor(model => model.LSPId, Model.DDLSP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LSPId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group" align="center" >
                        <div >
                            @Html.DropDownListFor(model => model.LZaduzenjeId, Model.DDLZ, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LSPId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr style="height:100px">
                <td colspan="3" align="right" style="padding:48px 0px 0px 0px">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" >
                            <input type="submit" value="Spasi" class="btn btn-success" style="width:125px" />
                        </div>
                    </div>
                </td>
                
            </tr>
        </table>

    </div>
    }