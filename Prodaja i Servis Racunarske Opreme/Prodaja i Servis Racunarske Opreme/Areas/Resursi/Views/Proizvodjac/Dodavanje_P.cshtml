@model Prodaja_i_Servis_Racunarske_Opreme.Models.Proizvodjac

@{
    ViewBag.Title = "Dodavanje_P";
    Layout = null;
}

<div id="MojInfoScr">
    <div class="modal show" role="dialog">
        <div role="dialog">
            <div class="modal-dialog" style="width: 550px;">
                <div class="modal-content">
                    <div class="modal-body">
                        @using (Ajax.BeginForm("Spasi_P", "Proizvodjac", new AjaxOptions { UpdateTargetId = "AjaxDiv" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h2 style="text-align:center">Dodavanje Proizvodjaca</h2>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <table align="center" style="outline:dotted; outline-color:green" width="500">
                                    <tr style="height:80px">
                                        <td colspan="3" align="center">
                                            Naziv
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </td>

                                    </tr>
                                    <tr style="height:100px">
                                        <td colspan="2">
                                            <div style="color:red;">
                                                @Html.ValidationSummary()
                                            </div>
                                        </td>
                                        <td align="right" style="padding:48px 0px 0px 0px">
                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Spasi" class="btn btn-success" style="width:125px" />
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
